{% trans_default_domain 'harmony_user' %}

{% if error %}
<div class="ui negative message">
  <div class="header">{{ 'title.login_error'|trans }}</div>
  <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
</div>
{% endif %}

<form class="ui form" action="{{ path('harmony_user_login') }}" method="post">
  <div class="field">
    <label for="username">{{ 'label.username'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required">
  </div>

  <div class="field">
    <label for="password">{{ 'label.password'|trans }}</label>
    <input type="password" id="password" name="_password" required="required">
  </div>

  {% if app.request.get('redirect_to') %}
  <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}">
  {% endif %}
  {% if csrf_token %}
  <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">
  {% endif %}

  <button class="ui button" type="submit">{{ 'action.sign_in'|trans }}</button>
</form>
